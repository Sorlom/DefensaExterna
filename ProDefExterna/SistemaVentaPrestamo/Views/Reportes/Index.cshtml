@model SistemaVentaPrestamo.Models.Prestamo

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Reportes</h2>

@using (Html.BeginForm("Report1", "Reportes", FormMethod.Post))
{

    <h4>Primer Reporte</h4>
    <hr />
    <p>Lista de fechas de cantidades de repuestos por tipo.</p>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.fechaInicio, new { htmlAttributes = new { @class = "datepicker" } })             
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.fechaLimite, new { htmlAttributes = new { @class = "datepicker" } })
            </div>
        </div>
    </div>
    <input type="submit" value="Generar Reporte" class="btn btn-default" />
    <hr />
}

