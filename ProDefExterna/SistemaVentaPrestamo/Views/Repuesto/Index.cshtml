@model IEnumerable<SistemaVentaPrestamo.Models.Repuesto>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Repuesto</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayName("Tipo Repuesto")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoRepuesto.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idRepuesto }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idRepuesto }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idRepuesto })
        </td>
    </tr>
}

</table>
